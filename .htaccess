# Gaming Currency Calculator Redirects (Consolidated to Unified Converter)
# All individual calculators redirect to /gaming-currency-converter/ with hash navigation

# Enable Rewrite Engine (Primary method - works even when directories don't exist)
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# Root-level Calculator Redirects
RewriteRule ^robux-calculator/?$ /gaming-currency-converter/#robux [R=301,L]
RewriteRule ^vbucks-calculator/?$ /gaming-currency-converter/#vbucks [R=301,L]
RewriteRule ^cod-points-calculator/?$ /gaming-currency-converter/#cod-points [R=301,L]
RewriteRule ^fifa-points-calculator/?$ /gaming-currency-converter/#fifa-points [R=301,L]
RewriteRule ^apex-coins-calculator/?$ /gaming-currency-converter/#apex-coins [R=301,L]
RewriteRule ^minecoins-calculator/?$ /gaming-currency-converter/#minecoins [R=301,L]

# Gaming Calculators Subdirectory Redirects
RewriteRule ^gaming-calculators/robux/?$ /gaming-currency-converter/#robux [R=301,L]
RewriteRule ^gaming-calculators/robux/.*$ /gaming-currency-converter/#robux [R=301,L]

RewriteRule ^gaming-calculators/vbucks/?$ /gaming-currency-converter/#vbucks [R=301,L]
RewriteRule ^gaming-calculators/vbucks/.*$ /gaming-currency-converter/#vbucks [R=301,L]

RewriteRule ^gaming-calculators/cod-points/?$ /gaming-currency-converter/#cod-points [R=301,L]
RewriteRule ^gaming-calculators/cod-points/.*$ /gaming-currency-converter/#cod-points [R=301,L]

RewriteRule ^gaming-calculators/fifa-points/?$ /gaming-currency-converter/#fifa-points [R=301,L]
RewriteRule ^gaming-calculators/fifa-points/.*$ /gaming-currency-converter/#fifa-points [R=301,L]

RewriteRule ^gaming-calculators/apex-coins/?$ /gaming-currency-converter/#apex-coins [R=301,L]
RewriteRule ^gaming-calculators/apex-coins/.*$ /gaming-currency-converter/#apex-coins [R=301,L]

RewriteRule ^gaming-calculators/minecoins/?$ /gaming-currency-converter/#minecoins [R=301,L]
RewriteRule ^gaming-calculators/minecoins/.*$ /gaming-currency-converter/#minecoins [R=301,L]

RewriteRule ^gaming-calculators/lol-rp/?$ /gaming-currency-converter/ [R=301,L]
RewriteRule ^gaming-calculators/lol-rp/.*$ /gaming-currency-converter/ [R=301,L]
</IfModule>

# Fallback: Use RedirectMatch if mod_rewrite is not available
# Root-level Calculator Redirects
RedirectMatch 301 ^/robux-calculator(/.*)?$ /gaming-currency-converter/#robux
RedirectMatch 301 ^/vbucks-calculator(/.*)?$ /gaming-currency-converter/#vbucks
RedirectMatch 301 ^/cod-points-calculator(/.*)?$ /gaming-currency-converter/#cod-points
RedirectMatch 301 ^/fifa-points-calculator(/.*)?$ /gaming-currency-converter/#fifa-points
RedirectMatch 301 ^/apex-coins-calculator(/.*)?$ /gaming-currency-converter/#apex-coins
RedirectMatch 301 ^/minecoins-calculator(/.*)?$ /gaming-currency-converter/#minecoins

# Gaming Calculators Subdirectory Redirects
RedirectMatch 301 ^/gaming-calculators/robux(/.*)?$ /gaming-currency-converter/#robux
RedirectMatch 301 ^/gaming-calculators/vbucks(/.*)?$ /gaming-currency-converter/#vbucks
RedirectMatch 301 ^/gaming-calculators/cod-points(/.*)?$ /gaming-currency-converter/#cod-points
RedirectMatch 301 ^/gaming-calculators/fifa-points(/.*)?$ /gaming-currency-converter/#fifa-points
RedirectMatch 301 ^/gaming-calculators/apex-coins(/.*)?$ /gaming-currency-converter/#apex-coins
RedirectMatch 301 ^/gaming-calculators/minecoins(/.*)?$ /gaming-currency-converter/#minecoins
RedirectMatch 301 ^/gaming-calculators/lol-rp(/.*)?$ /gaming-currency-converter/
