# NOTE: This file is NOT used on GitHub Pages
# GitHub Pages doesn't support .htaccess (Apache config)
# Redirects are handled by /404.html instead
# This file is kept for reference only
#
# ============================================================================
# Gaming Currency Calculator Redirects (Consolidated to Unified Converter)
# All individual calculators redirect to /gaming-currency-converter/ with query parameters
# ============================================================================

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# Root-level Calculator Redirects (using query parameters)
RewriteRule ^robux-calculator/?$ /gaming-currency-converter/?currency=robux [R=301,L,QSA]
RewriteRule ^vbucks-calculator/?$ /gaming-currency-converter/?currency=vbucks [R=301,L,QSA]
RewriteRule ^cod-points-calculator/?$ /gaming-currency-converter/?currency=cod-points [R=301,L,QSA]
RewriteRule ^fifa-points-calculator/?$ /gaming-currency-converter/?currency=fifa-points [R=301,L,QSA]
RewriteRule ^apex-coins-calculator/?$ /gaming-currency-converter/?currency=apex-coins [R=301,L,QSA]
RewriteRule ^minecoins-calculator/?$ /gaming-currency-converter/?currency=minecoins [R=301,L,QSA]

# Gaming Calculators Subdirectory Redirects - Main pages
RewriteRule ^gaming-calculators/robux/?$ /gaming-currency-converter/?currency=robux [R=301,L,QSA]
RewriteRule ^gaming-calculators/vbucks/?$ /gaming-currency-converter/?currency=vbucks [R=301,L,QSA]
RewriteRule ^gaming-calculators/cod-points/?$ /gaming-currency-converter/?currency=cod-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/fifa-points/?$ /gaming-currency-converter/?currency=fifa-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/apex-coins/?$ /gaming-currency-converter/?currency=apex-coins [R=301,L,QSA]
RewriteRule ^gaming-calculators/minecoins/?$ /gaming-currency-converter/?currency=minecoins [R=301,L,QSA]

# Gaming Calculators Subdirectory Redirects - Guide pages
RewriteRule ^gaming-calculators/robux/guide\.html$ /gaming-currency-converter/?currency=robux [R=301,L,QSA]
RewriteRule ^gaming-calculators/vbucks/guide\.html$ /gaming-currency-converter/?currency=vbucks [R=301,L,QSA]
RewriteRule ^gaming-calculators/cod-points/guide\.html$ /gaming-currency-converter/?currency=cod-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/fifa-points/guide\.html$ /gaming-currency-converter/?currency=fifa-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/apex-coins/guide\.html$ /gaming-currency-converter/?currency=apex-coins [R=301,L,QSA]
RewriteRule ^gaming-calculators/minecoins/guide\.html$ /gaming-currency-converter/?currency=minecoins [R=301,L,QSA]

# Gaming Calculators Subdirectory Redirects - Catch-all for any other pages
RewriteRule ^gaming-calculators/robux/.*$ /gaming-currency-converter/?currency=robux [R=301,L,QSA]
RewriteRule ^gaming-calculators/vbucks/.*$ /gaming-currency-converter/?currency=vbucks [R=301,L,QSA]
RewriteRule ^gaming-calculators/cod-points/.*$ /gaming-currency-converter/?currency=cod-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/fifa-points/.*$ /gaming-currency-converter/?currency=fifa-points [R=301,L,QSA]
RewriteRule ^gaming-calculators/apex-coins/.*$ /gaming-currency-converter/?currency=apex-coins [R=301,L,QSA]
RewriteRule ^gaming-calculators/minecoins/.*$ /gaming-currency-converter/?currency=minecoins [R=301,L,QSA]

# LoL RP Calculator (redirects to main converter)
RewriteRule ^gaming-calculators/lol-rp/?$ /gaming-currency-converter/ [R=301,L,QSA]
RewriteRule ^gaming-calculators/lol-rp/.*$ /gaming-currency-converter/ [R=301,L,QSA]
</IfModule>
